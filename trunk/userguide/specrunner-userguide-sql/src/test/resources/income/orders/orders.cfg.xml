<?xml version="1.0" encoding="UTF-8"?>
<schema name="ORD" alias="Orders">

<!-- 
create table ORD.customers (id BIGINT generated by default as identity, name VARCHAR(255), primary key (id))
create table ORD.orders (id BIGINT generated by default as identity, customer_id BIGINT, date TIMESTAMP, primary key (id))
create table ORD.line_items (line_number INTEGER not null, order_id BIGINT not null, product_id BIGINT, quantity INTEGER, primary key (order_id, line_number))
create table ORD.products (id BIGINT generated by default as identity, serialNumber VARCHAR(255), primary key (id))
alter table ORD.orders add constraint ordersFK0 foreign key (customer_id) references customers
alter table ORD.line_items add constraint line_itemsFK0 foreign key (product_id) references products
alter table ORD.line_items add constraint line_itemsFK1 foreign key (order_id) references orders
 -->

  <table name="customers" alias="Customer">
    <column name="id" alias="ID" key="true" converter="long" />
    <column name="name" alias="Name" reference="true"/>
  </table>

  <table name="orders" alias="Order">
    <column name="id" alias="ID" key="true" converter="long" />
    <column name="customer_id" alias="Customer" foreign="true" reference="true" virtual="true"/>
    <column name="date" alias="Date" converter="date" arg0="MM/dd/yyyy" reference="true"/>
  </table>

  <table name="line_items" alias="Items">
    <column name="line_number" alias="Number" key="true" converter="long" />
    <column name="order_id" alias="Order" foreign="true" virtual="true"/>
    <column name="product_id" alias="Product" foreign="true" virtual="true"/>
    <column name="quantity" alias="Quantity" converter="int"/>
  </table>

  <table name="products" alias="Product">
    <column name="id" alias="ID" key="true" converter="long" />
    <column name="serialNumber" alias="Serial" reference="true"/>
  </table>
</schema>